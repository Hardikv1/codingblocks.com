  <script>
    window.scrollNow = function (target) {
      var scrollContainer = target;
      do { //find scroll container
        scrollContainer = scrollContainer.parentNode;
        if (!scrollContainer) return;
        scrollContainer.scrollTop += 1;
      } while (scrollContainer.scrollTop == 0);

      var targetY = 0;
      do {
        // Find the top of target relatively to the container
        if (target == scrollContainer) break;
        targetY += target.offsetTop;
      } while (target = target.offsetParent);

      scroll = function (c, a, b, i) {
        i++; if (i > 30) return;
        c.scrollTop = a + (b - a) / 30 * i;
        setTimeout(function () { scroll(c, a, b, i); }, 20);
      }
      // Scroll to target
      scroll(scrollContainer, scrollContainer.scrollTop, targetY, 0);
    }

    window.unhidecpp = function(target){
      let webd = document.getElementById('webd');
      let cmp = document.getElementById('cmp');
      
      target.style.display = "";
      webd.style.display = "none";
      cmp.style.display = "none";
    }
    
    window.unhidewebd = function(target){
      let cpp = document.getElementById('cpp');
      let cmp = document.getElementById('cmp');
      
      target.style.display = "";
      cpp.style.display = "none";
      cmp.style.display = "none";
    }

    window.unhidecmp = function(target){
      let webd = document.getElementById('webd');
      let cpp = document.getElementById('cpp');

      target.style.display = "";
      webd.style.display = "none";
      cpp.style.display = "none";
    }

    window.onload = ()=>{
      let cpp = document.getElementById('cmp');
      let webd = document.getElementById('webd');
      let cmp = document.getElementById('cmp');
      
      cpp.style.display = "block";
      webd.style.display = "none";
      cmp.style.display = "none";
    }
  </script>
</head>

