<div class="a-cbm">
  <div class="border-card p-0 mb-30">
    {{#with schedule_days}}
    <div class="px-md-30 px-20 py-4 bg-grey-light-3">
        <div class="bold font-5">Lecture Schedule</div>
    </div>
    {{/with}}
    <div class="py-4 overflow-y-auto gradient-orange-scroll" style="max-height: 450px;">
      {{#each schedule}}
      <div class="row no-gutters align-items-center justify-content-between py-3 hover-grey px-md-30 px-20">
        <div class="col-5">
          <div class="bold font-4">{{lecture}}</div>
        </div>
        <div class=" font-4bold gradient-text-orange flex-1 pl-4">{{description}}</div>
      </div>
      <div class="divider-h px-md-5 px-4 content-divider"></div>
      {{/each}}
    </div>
  </div>
</div>